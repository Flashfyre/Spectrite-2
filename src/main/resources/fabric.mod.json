{
  "schemaVersion": 1,
  "id": "spectrite",
  "version": "${version}",
  "name": "Spectrite 2",
  "description": "Fabric rewrite of the original Spectrite mod",
  "authors": [
    "FlashfyreDev"
  ],
  "contact": {
    "homepage": "https://github.com/Flashfyre/Spectrite-2/",
    "sources": "https://github.com/Flashfyre/Spectrite-2/"
  },
  "license": "ARR",
  "icon": "assets/spectrite/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.flashfyre.spectrite.Spectrite"
    ],
    "client": [
      "com.flashfyre.spectrite.client.SpectriteClient"
    ],
    "cardinal-components-item": [
      "com.flashfyre.spectrite.component.item.ItemComponents"
    ],
    "cardinal-components-entity": [
      "com.flashfyre.spectrite.component.entity.EntityComponents"
    ],
    "cardinal-components-chunk": [
      "com.flashfyre.spectrite.component.chunk.ChunkComponents"
    ],
    "cardinal-components-world": [
      "com.flashfyre.spectrite.component.world.WorldComponents"
    ]
  },
  "mixins": [
    "spectrite.mixins.json",
    "spectrite.client.mixins.json"
  ],
  "accessWidener": "spectrite.accesswidener",
  "custom": {
    "cardinal-components": [
      "spectrite:superchromatic_item",
      "spectrite:superchromatic_entity",
      "spectrite:spectrite_weapon_entity_attributes",
      "spectrite:superchromatic_chunk",
      "spectrite:superchromatic_compatible_world"
    ]
  },
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  }
}
